html, body
    height 100%
    padding 0
    margin 0
    background #dedede
    font-family monospace
    font-size 10px
main
    position absolute
    top 50%
    left 50%
    transform translate3d( -50%, -50%, 0 )

#settings
    margin 20px
    width 300px
    .set
        margin-bottom 10px
        label
            display inline-block
            width 60px
            position relative 
            top -3px