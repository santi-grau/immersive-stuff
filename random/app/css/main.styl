html, body
    height 100%
    padding 0
    margin 0

body
    background linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab)
    background-size 400% 400%
    animation gradient 15s ease infinite
    height 100vh

.chat
    width 640px
    height 480px
    border solid 1px
    border-color #000000
    background rgba(255,255,255,1   )
    position absolute
    border-radius 10px
    box-shadow 0px 0px 10px rgba(0,0,0,0.5)
    overflow-y scroll
    overflow-x hidden
    font-family courier
    font-size 10px
    padding 40px 20px 0
    transition transform 1s
    &::after
        content '⬤ ⬤ ⬤'
        position absolute
        top 0
        left 0
        padding 12px
        color #ffffff
        background #000000
        width 100%
        height 18px
    .line
        border-bottom dashed 1px #888888
        padding 8px 0


@keyframes gradient
	0%
        background-position 0% 50%
	50%
        background-position 100% 50%
	100%
        background-position 0% 50%